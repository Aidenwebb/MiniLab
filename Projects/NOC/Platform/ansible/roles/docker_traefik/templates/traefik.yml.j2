global:
  checkNewVersion: false
  sendAnonymousUsage: false

log:
  level: DEBUG

api:
  dashboard: true

ping:
  entryPoint: ping

entryPoints:
  ping:
    address: :8082
  web:
    address: :80
    http:
      redirections:
        entryPoint:
          to: websecure
          scheme: https
  websecure:
    address: :443
    http:
      tls:
        certResolver: le
        domains:
          - main: "{{ docker_traefik__host_uri }}"
            sans:
              - "*.{{ docker_traefik__host_uri }}"

certificatesResolvers:
  le:
    acme:
      email: "{{ docker_traefik__acme_email }}"
      storage: acme.json
      dnsChallenge:
        provider: "{{ docker_traefik__acme_provider }}"
        delayBeforeCheck: 5
        resolvers:
          - 1.1.1.1:53
          - 8.8.8.8:53

providers:
  docker:
    network: "{{ docker_traefik__docker_network }}"
    exposedByDefault: false
